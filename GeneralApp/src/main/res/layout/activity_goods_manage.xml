<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/outer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gov.culturems.activities.GoodsManageActivity">

    <LinearLayout
        android:id="@+id/goods_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/goods_title"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:gravity="center"
            android:padding="10dp"
            android:text="物品"
            android:textColor="@color/text_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/goods_title"
            android:background="@color/trans"
            android:drawableRight="@drawable/down_arrow"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/choose_goods"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/remark_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/remark_title"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:gravity="center"
            android:padding="10dp"
            android:text="备注"
            android:textColor="@color/text_gray"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/goods_title"
            android:background="@color/trans"
            android:gravity="center_vertical"
            android:hint="请输入备注"
            android:padding="10dp"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_title"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:gravity="center"
            android:padding="10dp"
            android:text="时间"
            android:textColor="@color/text_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/date_picker_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/goods_title"
            android:background="@color/trans"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="2017-05-12"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/time_picker_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/date_picker_text"
            android:background="@color/trans"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="12:30"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/btn_yellow_bg"
            android:text="开始"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/stop_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/start_btn"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/btn_yellow_bg"
            android:enabled="false"
            android:text="结束"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>
