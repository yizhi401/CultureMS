<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/calendar_time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/calendar_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_white_selector"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="2015年5月1日"
            android:textColor="@color/main_red"
            android:textSize="15sp" />

        <Button
            android:id="@+id/calendar_time_text"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_toRightOf="@id/calendar_date_textview"
            android:background="@drawable/btn_white_selector"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/choose_time"
            android:textColor="@color/main_red"
            android:textSize="15sp"
            android:visibility="gone" />

    </LinearLayout>

    <Button
        android:id="@+id/calendar_left_arrow"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:layout_toLeftOf="@id/calendar_time_layout"
        android:background="@drawable/btn_white_selector"
        android:gravity="center"
        android:text="@string/left_pointer"
        android:textColor="@color/main_red"
        android:visibility="gone" />


    <Button
        android:id="@+id/calendar_right_arrow"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:layout_toRightOf="@id/calendar_time_layout"
        android:background="@drawable/btn_white_selector"
        android:gravity="center"
        android:text="@string/right_pointer"
        android:textColor="@color/main_red"
        android:visibility="gone" />


</RelativeLayout>