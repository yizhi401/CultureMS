<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/open_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:padding="5dp">

        <TextView
            android:id="@+id/open_style_hint"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="打开条件" />

        <TextView
            android:id="@+id/open_style_condition"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_round_gray"
            android:gravity="center"
            android:padding="10dp"
            android:text="温度高于"
            android:textColor="@color/text_gray_deep" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/divider_gray" />

    <RelativeLayout
        android:id="@+id/high_thresold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="5dp">

        <TextView
            android:id="@+id/high_thresold_hint"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="阈值" />

        <TextView
            android:id="@+id/high_thresold_condition"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_round_gray"
            android:gravity="center"
            android:padding="10dp"
            android:text="30"
            android:textColor="@color/text_gray_deep" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/close_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="5dp">

        <TextView
            android:id="@+id/close_style_hint"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="关闭条件" />

        <TextView
            android:id="@+id/close_style_condition"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_round_gray"
            android:gravity="center"
            android:padding="10dp"
            android:text="温度低于"
            android:textColor="@color/text_gray_deep" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/divider_gray" />

    <RelativeLayout
        android:id="@+id/low_thresold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="5dp">

        <TextView
            android:id="@+id/low_thresold_hint"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="阈值" />

        <TextView
            android:id="@+id/low_thresold_condition"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_round_gray"
            android:gravity="center"
            android:padding="10dp"
            android:text="25"
            android:textColor="@color/text_gray_deep" />
    </RelativeLayout>

</LinearLayout>